{
  "info": {
    "name": "TruckFlow - Maintenance API",
    "description": "Maintenance and maintenance rules management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Maintenance Rules",
      "item": [
        {
          "name": "Rules - Create Rule",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201', () => {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Rule created', () => {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    pm.expect(jsonData.data).to.have.property('_id');",
                  "    pm.collectionVariables.set('MAINTENANCE_RULE_ID', jsonData.data._id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{ADMIN_TOKEN}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Oil Change - Every 10000km\",\n  \"intervalValue\": 10000,\n  \"conditionType\": \"mileage\",\n  \"targetType\": \"truck\",\n  \"description\": \"Regular oil change maintenance\",\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/maintenance/rules",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "maintenance", "rules"]
            }
          }
        },
        {
          "name": "Rules - Get All Rules",
          "request": {

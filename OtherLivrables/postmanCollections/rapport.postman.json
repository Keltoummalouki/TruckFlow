  "item": [
    {
      "name": "Reports - Fleet Overview",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{ADMIN_TOKEN}}"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/reports/fleet-overview",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "reports", "fleet-overview"]
        }
      }
    },

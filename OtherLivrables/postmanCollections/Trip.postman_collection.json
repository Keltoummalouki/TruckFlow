  "item": [
    {
      "name": "Trips - Create New Trip",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', () => {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Trip created successfully', () => {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "    pm.expect(jsonData.data).to.have.property('_id');",
              "    pm.expect(jsonData.data.status).to.equal('pending');",
              "    pm.collectionVariables.set('TRIP_ID', jsonData.data._id);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{ADMIN_TOKEN}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"scheduledDeparture\": \"2024-02-15T08:00:00Z\",\n  \"departureLoc\": \"Warehouse A - Paris\",\n  \"arrivalLoc\": \"Client Site - Lyon\",\n  \"truck\": \"{{TRUCK_ID}}\",\n  \"driver\": \"{{DRIVER_ID}}\",\n  \"comments\": \"Fragile cargo - handle with care\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/trips",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "trips"]
        }
      }
    },

  "item": [
    {
      "name": "Tires - Create New Tire",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', () => {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Tire created successfully', () => {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "    pm.expect(jsonData.data).to.have.property('_id');",
              "    pm.expect(jsonData.data.serialNumber).to.equal('TIRE-2024-001');",
              "    pm.collectionVariables.set('TIRE_ID', jsonData.data._id);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{ADMIN_TOKEN}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"serialNumber\": \"TIRE-2024-001\",\n  \"brand\": \"Michelin\",\n  \"model\": \"XZE\",\n  \"size\": \"315/80R22.5\",\n  \"purchaseDate\": \"2024-01-15\",\n  \"maxMileage\": 150000,\n  \"status\": \"new\",\n  \"notes\": \"Premium tire for long haul\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/tires",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "tires"]
        }
      }
    },
